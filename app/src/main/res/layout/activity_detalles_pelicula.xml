<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activities.DetallesPeliculaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/tiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="30dp"
            android:text="@string/duracion"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plataforma" />

        <TextView
            android:id="@+id/plataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/plataforma"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/genero" />

        <ImageView
            android:id="@+id/ivCaratulaDetalle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvDescripcionDetalle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDescripcionDetalle"
            app:layout_constraintTop_toTopOf="@+id/tvDescripcionDetalle"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@string/caratulapelicula" />

        <TextView
            android:id="@+id/tvTituloDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRojoNetflix"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Venom: Let There Be Carnage" />

        <TextView
            android:id="@+id/tvDescripcionDetalle"
            android:layout_width="400dp"
            android:layout_height="409dp"
            android:layout_marginTop="24dp"
            android:elegantTextHeight="true"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloDetalle"
            tools:text="After finding a host body in investigative reporter Eddie Brock, the alien symbiote must face a new enemy, Carnage, the alter ego of serial killer Cletus Kasady." />

        <TextView
            android:id="@+id/tvNotaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvTiempoDetalle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTiempoDetalle"
            tools:text="8.5" />

        <ImageView
            android:id="@+id/ivEstrella"
            android:layout_width="107dp"
            android:layout_height="87dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvTiempoDetalle"
            app:layout_constraintEnd_toStartOf="@+id/tvNotaDetalle"
            app:layout_constraintTop_toTopOf="@+id/tvTiempoDetalle"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/estrellavaloraciones" />

        <TextView
            android:id="@+id/tvGeneroDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="56dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescripcionDetalle"
            tools:text="Ciencia FicciÃ³n" />

        <TextView
            android:id="@+id/tvTiempoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="46dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlataformaDetalle"
            tools:text="4h 33min" />

        <TextView
            android:id="@+id/tvPlataformaDetalle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="43dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneroDetalle"
            tools:text="Netflix" />

        <TextView
            android:id="@+id/genero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/genero"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvDescripcionDetalle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>