<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blancolopezsaulproyectopmdm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fondo"
        android:label="RanchoFilms"
        android:roundIcon="@mipmap/ic_fondo"
        android:supportsRtl="true"

        android:theme="@style/Theme.BlancoLopezSaulProyectoPMDM">

        <activity
            android:name=".activities.AnadirPeliculaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.EditarPeliculaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.DetallesPeliculaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.PeliculasActivity"
            android:exported="true"
            android:label="@string/title_activity_peliculas"
            android:theme="@style/Theme.BlancoLopezSaulProyectoPMDM.NoActionBar" />
        <activity
            android:name=".activities.CrearcuentaActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>